<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Teledrive" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/tblue</item>
        <item name="colorPrimaryVariant">@color/tblack</item>
        <item name="colorOnPrimary">@color/tblack</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/tblue</item>
        <item name="colorSecondaryVariant">@color/tblack</item>
        <item name="colorOnSecondary">@color/tblack</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Teledrive.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Teledrive.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Teledrive.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>